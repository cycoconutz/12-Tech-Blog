{{#each posts as |post|}}
<div class="posts list-group">

    <div class="card">
        <div class="card-header flex-row justify-space-between">
            <h2><a href='./dashboard/edit/{{post.id}}'>{{post.title}}</a></h2>
            <div class="flex-row">
                <p>Posted by {{post.User.username}} </p>
                <p>&nbspon {{format_date post.createdAt}}</p>
            </div>
        </div>
        <div class="card-body">
            <p>{{post.body}}</p>
        </div>
    </div>
</div>

</div>
{{/each}}