<div class="posts list-group">

    <div class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>{{title}}</h2>
            <div class="flex-row">
                <p>Posted by {{User.username}} </p>
                <p>&nbsp on {{createdAt}}</p>
            </div>
        </div>
        <div class="card-body">
            <p>{{body}}</p>
        </div>
    </div>
    {{#if comments.[0]}}
    {{#each comments as |comment|}}
    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <p>{{comment.body}}</p>
            <div class="flex-row">
                <p>-{{comment.User.username}} </p>
                <p>&nbsp on {{format_date comment.createdAt}}</p>
            </div>

        </div>
    </div>
    {{/each}}
    {{/if}}
</div>

</div>
<script src="/js/edit.js"></script>